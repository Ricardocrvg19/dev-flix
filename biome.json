{
  "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {},
      "suspicious": {
        "noExtraNonNullAssertion": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "none"
    }
  },
  "json": {
    "formatter": {
      "indentWidth": 2
    }
  }
}
